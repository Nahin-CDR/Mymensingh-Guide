<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".TravelSection">




    <!--code for upper signs layout-->
    <LinearLayout
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_weight="2"
            android:gravity="start|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton

                android:id="@+id/backButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffff"
                android:filterTouchesWhenObscured="true"
                android:src="@drawable/nme"
                />
        </LinearLayout>
        <!--  android:layout_marginRight="150dp" -->

        <TextView
            android:layout_weight="1"
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:hint="@string/app_name"
            android:gravity="center"
            android:textColor="#FF001D"
            android:textSize="15dp" />

        <LinearLayout
            android:gravity="end|center_vertical"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_loadingID"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/loading" />
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_liveID"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/live" />
        </LinearLayout>


    </LinearLayout>


    <!--code for calling layout-->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <EditText
            android:id="@+id/edtphncall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:maxLength="11"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/dial"
            android:hint="এখানে নাম্বার তুলে ডায়াল করুন"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="17dp" />

        <ImageButton
            android:layout_weight="1"
            android:layout_below="@+id/edtphncall"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/btnphncall"
            android:padding="2dp"
            android:src="@drawable/callingicon"
            android:background="@drawable/outer"
            android:scaleType="centerInside"
            android:filterTouchesWhenObscured="true"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>


    <!--code for webView-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/WebViewLayoutID"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/wb_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </WebView>
    </LinearLayout>



    <!--code for no internetLayout-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/noInternetID"
        android:layout_margin="20dp"
        android:background="@drawable/outer"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/nonet"
            />
        <TextView
            android:textSize="14sp"
            android:textColor="#636563"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_net"
            />

    </LinearLayout>

</LinearLayout>